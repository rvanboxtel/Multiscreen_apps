<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_malta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSporting"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.romek.multiscreenapps.SportingAlmereActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        app:srcCompat="@drawable/almerecityfc"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/namelocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/almerecity"
        android:textAlignment="center"
        android:textColor="@color/colorTextWhite"
        android:textSize="30sp"
        android:layout_alignTop="@+id/logo"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/details"
        android:text="@string/citydetails"
        android:textSize="25sp"
        android:layout_below="@+id/logo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:textColor="@color/colorTextWhite"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:text="@string/backtomainmenu"
        android:textColor="@color/colorTextWhite"
        android:textSize="30sp"
        android:textAlignment="center"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="backtomenu"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/details2"
        android:text="@string/citydetails2"
        android:textSize="25sp"
        android:textColor="@color/colorTextWhite"
        android:layout_below="@+id/details"
        android:layout_alignParentStart="true" />

    <ImageView
        app:srcCompat="@drawable/yanmar"
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_below="@+id/details2"
        android:layout_alignParentStart="true"
        android:layout_height="200dp" />

</RelativeLayout>
